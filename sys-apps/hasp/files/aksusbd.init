depend() {
	need localmount
}

start() {
	ebegin "Starting HARDLOCK daemon"
	start-stop-daemon --start --quiet --exec /usr/sbin/aksusbd -- -l3
	eend $?
}

stop() {
	ebegin "Stopping HARDLOCK daemon"
	start-stop-daemon --stop --quiet --exec /usr/sbin/aksusbd
	eend $?
}
